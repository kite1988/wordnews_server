<h1>All the <%= @lang %> words that you <%= @mode %></h1>

<table class="table table-striped">
  <tr>
    <th>No.</th>
    <th>English</th>
    <th>Chinese</th>
    <th>Pinyin</th>
  </tr>


<% @words.each_with_index do |word, index| %>
  <tr>
    <td><%=index+1 %></td>
    <td><%= word.english_text %></td>
    <td><a href='<%= word.more_url %>' target='_blank'><%= word.chinese_text %></a></td>
    <td>
       <button onClick="play(<%= word.id %>)" style="background-color:transparent; border-color:transparent;"> 
          <%= image_tag('play.png', height:"18", alt:"Play") %>
        </button>
        <audio id="<%= word.id %>" )>
          <% word.audio_urls.each do |url| %>
            <source src = "<%= url %>"/>
          <% end %>
        </audio>
        <%= word.chinese_pronunciation %>
    </td>
  </tr>
<% end %>
</table>
