<h1>All the <%= @lang %> words that you <%= @mode %></h1>

<table class="table table-striped">
  <tr>
    <th>No.</th>
    <th>English</th>
    <th>Chinese</th>
    <th>Pronounciation</th>
  </tr>


<% @words.each_with_index do |word, index| %>
  <tr>
    <td><%=index+1 %></td>
    <td><%= word.english_text %></td>
    <td><%= word.chinese_text %></td>
    <td><%= word.chinese_pronunciation %></td>
  </tr>
<% end %>
</table>
